<section class="blog">
  <% @posts.each do |post| %>
    <section class="post">
      <h2><%= link_to post.title, post_path(post) %></h2>
      <div class="post_nav">
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <div><%= post.body %></div>
      <div class="comments">
        <div id="<%= "show_comments" + post.id.to_s %>">
        <% link_text = "Comments (" + post.comments.count.to_s + ")" %>
          <%= link_to link_text, :controller => "posts", :action => "comments", id: post.id, remote: true %>
        </div>
      </div>
    </section>
  <% end %>

  <%= paginate @posts %>

</section>

<br />

<%= link_to 'New Post', new_post_path %>
