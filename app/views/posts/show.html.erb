<section class="blog">
    <section class="post">
      <h2><%= link_to @post.title, post_path(@post) %></h2>
      <div><%= @post.body %></div>
      <div class="post_nav">
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <div class="comments">
       <div class="comment">
         <% @post.comments.each do |c| %>
           <p><%= c.body %></p>
           <div class="reply">
             <% c.replies.each do |r| %>
               <p><%= r.body %></p>
             <% end %>
           </div>
         <% end %>
       </div>
      </div>
    </section>
</section>
